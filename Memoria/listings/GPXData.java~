public class GPXData implements Serializable{
    private String nombreSendero;
    private String descSendero;
    private Punto[] puntos;
    private double alturaMinima;
    private double alturaMaxima;
    private double gananciaAltitud;
    private double perdidaAltitud;
    private double distancia;

    public GPXData(String nS, String dS, Punto[] p) {
        setNombreSendero(nS);
        setDescSendero(dS);
        setPuntos(p);

        double ele_min = 999999999;
        double ele_max = -1;
        double ganancia_altitud = 0;
        double perdida_altitud = 0;
        for (int i = 1; i < getPuntos().length; i++) {
            if (getPuntos()[i].getElevacion() > ele_max) {
                ele_max = getPuntos()[i].getElevacion();
            }
            if (getPuntos()[i].getElevacion() < ele_min) {
                ele_min = getPuntos()[i].getElevacion();
            }
            if (i > 1) {
                double resta = getPuntos()[i - 1].getElevacion() - getPuntos()[i].getElevacion();
                if (resta > 0) {
                    perdida_altitud += resta;
                } else {
                    ganancia_altitud += (-1)*resta;
                }
            }
        }
        setAlturaMinima(ele_min);
        setAlturaMaxima(ele_max);
        setPerdidaAltitud(perdida_altitud);
        setGananciaAltitud(ganancia_altitud);
        setDistancia(getDistancia_calc());
    }
}